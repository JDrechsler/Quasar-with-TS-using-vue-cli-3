{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"node",
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}